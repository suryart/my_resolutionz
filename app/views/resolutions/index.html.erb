<% if current_user.present? %>
  <%= render 'form' %>
<% end %>
<hr />
<% @resolutions.each do |resolution| %>

  <div class="page-header row">
    <div class="col-sm-2">
      <%= image_tag(resolution.user.avatar, :alt => 'avatar') %>
    </div>
    <div class="col-md-8">
      <h3><%= resolution.user.name %></h3>
      <div class="row">
        <div class="col-md-6">
          <p class="lead">
            <%= resolution.description %>
          </p>
        </div>
        <% if current_user == resolution.user %>
          <div class="col-md-6">
            <%= link_to 'Edit', edit_resolution_path(resolution) %>
            <%= link_to 'Destroy', resolution, method: :delete, data: { confirm: 'Are you sure?' } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <%#= link_to 'Show', resolution %>
<% end %>
